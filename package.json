{
  "name": "wt2doc",
  "version": "0.0.2",
  "description": "WebTemplate to Asciidoc documentation - a util by Bifrost for Bifrost ",
  "main": "lib/index.js",
  "bin": {
    "wt2doc": "lib/index.js"

  },
  "scripts": {
    "dev": "ts-node src/index.ts  --wt 'testdata/EA - ReSPECT-3.v0.json' -o 'EA - ReSPECT-3.v0.adoc'",
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bjornna/wt2doc"
  },
  "keywords": [
    "openEHR",
    "Bifrost",
    "asciidoctor"
  ],
  "author": "Bjørn Næss <bna@dips.no>",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^14.14.7",
    "@types/ora": "^3.2.0",
    "ora": "^5.1.0",
    "yargs": "^16.1.0"
  },
  "devDependencies": {
    "@types/yargs": "^15.0.9",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.5"
  },
  "files": [
    "lib/**/**"
  ]
}
